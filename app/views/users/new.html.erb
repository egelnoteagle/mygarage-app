<h1>Sign Up!</h1>
<%= form_tag '/users', method: :post do %>
  <div>
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name %>  
  </div>
  <div>
    <%= label_tag :last_name %>
    <%= text_field_tag :last_name %>  
  </div>
  <div>
    <%= label_tag :user_name %>
    <%= text_field_tag :user_name %>  
  </div>
  <div>
    <%= label_tag :address %>
    <%= text_field_tag :address %>  
  </div>
  <div>
    <%= label_tag :address_line_2 %>
    <%= text_field_tag :address_line_2 %>  
  </div>
  <div>
    <%= label_tag :city %>
    <%= text_field_tag :city %>  
  </div>
  <div>
    <%= label_tag :state %>
    <%= text_field_tag :state %>  
  </div>
  <div>
    <%= label_tag :zip %>
    <%= text_field_tag :zip %>  
  </div>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>  
  </div>
  <div>
    <%= label_tag "Confirm Email" %>
    <%= text_field_tag :email %>  
  </div>
  <div>
    <%= label_tag "Password" %>
    <%= text_field_tag :password_digest %>  
  </div>
  <div>
    <%= label_tag "Confirm Password" %>
    <%= text_field_tag :password_digest %>  
  </div>
  <%= submit_tag "Submit" %>
<% end %>  